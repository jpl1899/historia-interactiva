<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Períodos Históricos</title>
</head>
<body>
  <h1>Lista de Períodos Históricos</h1>

  <a href="/periodos/nuevo">Crear Nuevo Período</a>

  <ul>
    <% periodos.forEach(periodo => { %>
      <li>
        <strong><%= periodo.nombre %></strong>: <%= periodo.descripcion %>
        <a href="/periodos/editar/<%= periodo._id %>">Editar</a>
        <form action="/periodos/<%= periodo._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Borrar</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
